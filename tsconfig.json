{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "moduleResolution": "node",
        "sourceMap": false,

        "noImplicitAny": true,
        "noImplicitThis": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,

        "declaration": true,
        "declarationMap": false,
        "lib": ["DOM", "ES5", "ES6", "ESNext"],
        "outDir": "lib"
    },
    "include": ["src/**/*.ts", "node_modules/zrender/**/*.ts"]
}
